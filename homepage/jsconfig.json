{
  "compilerOptions": {
    "target": "es2017",
    "allowSyntheticDefaultImports": false,
    "baseUrl": "./",
    "paths": {
      "x-api/*": ["src/api/*"],
      "x-components/*": ["src/components/*"],
      "x-containers/*": ["src/containers/*"],
      "x-models/*": ["src/models/*"],
      "x-stores/*": ["src/stores/*"],
      "x-services/*": ["src/services/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
